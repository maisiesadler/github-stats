        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "outDir": "compiled",
        "rootDir": "src"
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "mobile"
    ]
}